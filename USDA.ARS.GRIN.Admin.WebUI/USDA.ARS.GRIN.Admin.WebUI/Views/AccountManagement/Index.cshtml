
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ============================================================================================== -->
<!-- TABBED VIEW -->
<!-- ============================================================================================== -->
<div class="box box-primary" style="padding:10px;">
    <div class="box-header with-border">
        <h3 class="box-title">Manage Users</h3>

        <div class="box-tools pull-right">
            <div class="has-feedback">
            </div>
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <img src="/Content/img/bars-blk.png">
            </button>
        </div>
        <!-- /.box-tools -->
    </div>
    <!-- /.box-header -->
    <div class="box-body no-padding">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active" style="background-color:#ebebeb;">
                    <a href="#tab_1" id="tab-active-users" title="ActiveUsers" class="selector-tab" data-toggle="tab" aria-expanded="true">Active Users</a>
                </li>
                <li class="" style="background-color:#ebebeb;">
                    <a href="#tab_2" id="tab-cooperators-by-site" title="CooperatorsBySite" class="selector-tab" data-toggle="tab" aria-expanded="false">Cooperators by Site</a>
                </li>
                <li class="" style="background-color:#ebebeb;">
                    <a href="#tab_3" id="tab-search" title="" class="selector-tab" data-toggle="tab" aria-expanded="false">
                        <img src="~/Content/img/fa-search-plus-blue.png" style="width:18px; height:18px;" />
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <!-- ============================================================================================== -->
                <!-- ACTIVE USERS TAB -->
                <!-- ============================================================================================== -->
                <div class="tab-pane active" id="tab_1">
                    <div class="box-body">
                        <div id="section-active-users">
                        </div>
                    </div>
                </div>

                <!-- ============================================================================================== -->
                <!-- COOPERATORS-BY-SITE TAB -->
                <!-- ============================================================================================== -->
                <div class="tab-pane" id="tab_2">
                    <div class="box-body">
                        <div id="section-cooperators-by-site">
                        </div>
                    </div>
                </div>

                <!-- ============================================================================================== -->
                <!-- SEARCH TAB -->
                <!-- ============================================================================================== -->
                <div class="tab-pane" id="tab_3">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-7" style="padding-left:0px;">
                                        <div class="input-group" style="margin-left:0px;">
                                            <input type="text" id="txtCropName" name="CropName" placeholder="Type crop name ..." class="form-control">
                                            <span class="input-group-btn">
                                                <button type="button" id="btnSearch" class="btn btn-primary btn-flat">Search</button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div id="section-search-results" class="crop-search-results">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Script -->
<script type="text/javascript">

    $(document).ready(function(){
        var link = '@Url.Action("ActiveUsers", "AccountManagement")';
        $("#section-active-users").load(link);
    });

    $(".selector-tab").click(function () {
        var id = $(this).attr('id');
        var action = $(this).attr('title');
        var link = '@Url.Action("Action", "AccountManagement")';
        var displaySection = '';

        //DEBUG
        alert("LINK IS " + link);

        // Clear any checked items.
        $('.mailbox-messages input:checkbox').prop('checked', false);

        //if (action != '') {
        //    displaySection = "#" + id.replace("tab", "section");
        //    link = link.replace("Action", action);
        //    $(displaySection).load(link);
        //}
    });

    $("#btnSearch").click(function () {
        var value = $("#txtCropName").val();
        var url = '@Url.Action("CropSearch", "Taxonomy")';

        $.get(url, { searchText: value })
        .done(function (response) {
            $("#section-search-results").html(response);
        });
    });

    $("#btnCreateFolderSearchResults").click(function () {
        var valueArray = [];
        var title = "";
        var category = "Crop";
        var source = "";

        $('#modal-add-search-results-to-folder').modal('hide');

        title = $("#txtSearchResultsFolderTitle").val();

        //$("#section-search-results input:checked").each(function () {
        $(".active input:checked").each(function () {
            var id = $(this).attr("id");
            valueArray.push(id);
            }
        );

        $.ajax({
            url: '@Url.Action("AddToFolder","Taxonomy")',
            type: "GET",
            data: {folderId: 0, folderTitle: title, category: category, source: 'taxonomy_cwr_crop', values:valueArray.toString() },
            cache: false,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {

            }
        });
    });

</script>