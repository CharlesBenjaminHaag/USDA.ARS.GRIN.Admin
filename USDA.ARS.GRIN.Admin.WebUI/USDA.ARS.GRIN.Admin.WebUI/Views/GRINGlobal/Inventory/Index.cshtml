<script type="text/javascript">

    $(document).ready(function () {
        Load("NV");
        DisableSearch();
    });

    function DisableSearch() {
        $('#btnSearch').prop('disabled', true);
    };

    function Load(validationStatus) {
        var link = "";
        var action = "";
        var section = "";
        var batchSize = 0;

        var batchSize = $("#ddlBatchSizes").val();

        switch (validationStatus) {
            case "NV":
                action = "AccessionInventoryAttachments";
                section = "#section-to-validate";
                break;
            case "VL":
                action = "ValidatedAccessionInventoryAttachments";
                section = "#section-validated";
                break;
            case "ER":
                action = "ErrorAccessionInventoryAttachments";
                section = "#section-errors";

        }
        link = '@Url.Action("Action", "GRINGlobal")';
        link = link.replace("Action", action);

        if (batchSize > 0) {
            link = link + "?batchSize=" + batchSize;
        }
        $(section).load(link);

        link = '@Url.Action("ValidationStatistics","GRINGlobal")';
        $("#section-validation-statistics").load(link);

    };

    $(".selector-tab").click(function () {
        var id = $(this).attr('id');
        var status = $(this).attr('title');

        // Clear any checked items.
        $('.mailbox-messages input:checkbox').prop('checked', false);

        Load(status);
    });

