@model USDA.ARS.GRIN.Admin.WebUI.ViewModels.GRINGlobal.WebOrderRequestEditViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "WebOrder", FormMethod.Post, new { id = "frmEdit" }))
{
    <div class="row">
        <div class="col-md-12" style="margin-bottom:20px;">
            <input type="submit" class="btn btn-success pull-right" style="margin-left:5px;" value="Save" />
            <a href="@Url.Action("Index", "WebOrder", new { id = Model.ID })" class="btn btn-default pull-right">Return to  Home Page</a>
        </div>
    </div>

    <ul class="nav nav-tabs">
        <li class="active" style="background-color:#ebebeb;">
            <a href="#tab_1" id="tab-my-crops" title="UserCrops" class="selector-tab" data-toggle="tab" aria-expanded="true">Detail</a>
        </li>
        <li class="" style="background-color:#ebebeb;">
            <a href="#tab_2" id="tab-timeline" title="" class="selector-tab" data-toggle="tab" aria-expanded="false">Timeline</a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="tab_1">
            <div class="box box-default">
                <div class="box-header">
                    <h3 class="box-title">Cooperators</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>ID</th>
                                <th>Title</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Address 1</th>
                                <th>Address 2</th>
                                <th>Address 3</th>
                                <th>City</th>
                                <th>State</th>
                                <th>Postal Code</th>
                                <th>Created</th>
                                <th>Last Modified</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Web</td>
                                <td>@Model.WebCooperator.ID</td>
                                <td>@Model.WebCooperator.Title</td>
                                <td>@Model.WebCooperator.FirstName</td>
                                <td>@Model.WebCooperator.LastName</td>
                                <td>@Model.WebCooperator.Address.AddressLine1</td>
                                <td>@Model.WebCooperator.Address.AddressLine2</td>
                                <td>@Model.WebCooperator.Address.AddressLine3</td>
                                <td>@Model.WebCooperator.Address.City</td>
                                <td>@Model.WebCooperator.Address.State</td>
                                <td>@Model.WebCooperator.Address.ZIP</td>
                                <td>@Model.WebCooperator.CreatedDate</td>
                                <td>@Model.WebCooperator.ModifiedDate</td>
                            </tr>
                            @if (Model.Cooperator.ID > 0)
                            {
                                <tr>
                                    <td>Cooperator</td>
                                    <td>@Model.Cooperator.ID</td>
                                    <td>@Model.Cooperator.Title</td>
                                    <td>@Model.Cooperator.FirstName</td>
                                    <td>@Model.Cooperator.LastName</td>
                                    <td>@Model.Cooperator.Address.AddressLine1</td>
                                    <td>@Model.Cooperator.Address.AddressLine2</td>
                                    <td>@Model.Cooperator.Address.AddressLine3</td>
                                    <td>@Model.Cooperator.Address.City</td>
                                    <td>@Model.Cooperator.Address.State</td>
                                    <td>@Model.Cooperator.Address.ZIP</td>
                                    <td>@Model.Cooperator.CreatedDate</td>
                                    <td>@Model.Cooperator.ModifiedDate</td>
                                </tr>
                            }
                        </tbody>
                    </table>


                    @*<div class="row">
