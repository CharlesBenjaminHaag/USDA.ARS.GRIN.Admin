@model IQueryable<USDA.ARS.GRIN.Admin.Models.GRINGlobal.WebOrderRequest>

    <div class="box-group" id="accordion">
        @{ 
            string headerHrefId = String.Empty;
            string bodyId = String.Empty;
        }

        @foreach (var webOrderRequest in Model)
        {
            headerHrefId = "#collapse" + webOrderRequest.ID;
            bodyId = "collapse" + webOrderRequest.ID;

            <div class="panel box box-default no-border">
                <div class="box-header with-border" style="background-color:#d2d6de;">
                    <h4 class="box-title" style="font-weight:bold;">
                        <a data-toggle="collapse" data-parent="#accordion" href="@headerHrefId" class="collapsed" aria-expanded="false">
                            @webOrderRequest.ID (@webOrderRequest.OrderDate.ToShortDateString())
                        </a>
                    </h4>
                </div>
                <div id="@bodyId" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                    <div class="box-body">

                        <div class="mailbox-controls">
                            
                            <button type="button" class="btn btn-success btn-sm check-all-search-results">
                                <i class="fa fa-thumbs-up"></i>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm uncheck-all-search-results">
                                <i class="fa fa-thumbs-down"></i>
                            </button>
                            @*<button type="button" class="btn btn-primary btn-sm" onclick="">
                                <i class="fa fa-thumbs-up"></i>
                            </button>*@
                            @*<button type="button" id="btnDeleteMultiple" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash-o"></i>
                            </button>*@
                            <div class="pull-right">
                                @*<button type="button" disabled class="btn btn-default btn-sm">
                                    Export
                                </button>*@
                            </div>
                        </div>


                        <!-- WEB COOPERATOR -->
                        <h5>Cooperator</h5>
                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>Last Name</label>
                                    <input type="text" readonly class="form-control form-control-static" value="@webOrderRequest.WebCooperator.LastName" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label>First Name</label>
                                    <input type="text" readonly class="form-control form-control-static" value="@webOrderRequest.WebCooperator.FirstName" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Email</label>
                                    <div class="input-group">
                                        <input type="text" readonly class="form-control form-control-static" value="@webOrderRequest.WebCooperator.EmailAddress">
                                        <span class="input-group-btn">
                                            <button type="button" class="btn btn-info btn-flat">Look Up...</button>
                                        </span>
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Organization</label>
                                    <input type="text" readonly class="form-control form-control-static" value="" />
                                </div>
                            </div>
                        </div>

                        <!-- ORDER SUMMARY -->
                        <h5>Order Summary</h5>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Intended Use</label>
                                    <textarea class="form-control" rows="3" readonly value="@webOrderRequest.IntendedUseNote">@webOrderRequest.IntendedUseNote</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Special Instruction</label>
                                    <textarea class="form-control" rows="3" readonly value="@webOrderRequest.SpecialInstruction">@webOrderRequest.SpecialInstruction</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Note</label>
                                    <textarea class="form-control" rows="3" readonly value="@webOrderRequest.Note">@webOrderRequest.Note</textarea>
                                </div>
                            </div>
                        </div>

                        <!-- ORDER ITEMS -->
                        <table class="table table-striped ggtools">
                            <thead>
                                <tr>
                                    <th>Seq.</th>
                                    <th>Accession</th>
                                    <th>Species</th>
                                    <th>Status</th>
                                    <th>Site</th>
                                    <th>Qty. Shipped</th>
                                    <th>Distribution Form</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var webOrderRequestItem in webOrderRequest.WebOrderRequestItems)
                                {
                                    <tr>
                                        <td>@webOrderRequestItem.SequenceNumber</td>
                                        <td><a href="https://npgsweb.ars-grin.gov/gringlobal/accessiondetail.aspx?id=@webOrderRequestItem.Accession.ID">@webOrderRequestItem.Accession.Descriptor</a></td>
                                        <td>
                                            <a href="https://npgsweb.ars-grin.gov/gringlobal/taxon/taxonomydetail?id=@webOrderRequestItem.Species.ID">@webOrderRequestItem.Species.Name</a>
                                        </td>
                                        <td>@webOrderRequestItem.StatusCode</td>
                                        <td>@webOrderRequestItem.Site.LongName</td>
                                        <td>@webOrderRequestItem.QuantityShipped</td>
                                        <td>@webOrderRequestItem.DistributionForm</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
