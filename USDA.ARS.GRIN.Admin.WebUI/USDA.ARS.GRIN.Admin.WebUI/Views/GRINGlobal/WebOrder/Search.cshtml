@model USDA.ARS.GRIN.Admin.WebUI.ViewModels.GRINGlobal.WebOrderRequestSearchViewModel
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- ============================================================================================== -->
<!-- SEARCH CRITERIA -->
<!-- ============================================================================================== -->
<div class="row">
    <div class="col-md-12">
        <!-- Custom Tabs -->
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab_1" data-toggle="tab">New Search</a></li>
                <li><a href="#tab_2" data-toggle="tab">Saved Searches</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab_1">
                    <div id="section-search-criteria">
                        @using (Html.BeginForm("Search", "WebOrder", FormMethod.Post, new { id = "frmEdit" }))
                        {
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group form-horizontal">
                                        <label>Requestor Email</label>
                                        @Html.TextBoxFor(x => x.RequestorEmailAddress, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group form-horizontal">
                                        <label>Requestor First Name</label>
                                        @Html.TextBoxFor(x => x.RequestorFirstName, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group form-horizontal">
                                        <label>Requestor Last Name</label>
                                        @Html.TextBoxFor(x => x.RequestorLastName, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group form-horizontal">
                                        <label>Requestor Organization</label>
                                        @Html.TextBoxFor(x => x.RequestorOrganization, new { @class = "form-control" })
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group form-horizontal">
                                        <label>Intended Use</label>
                                        @Html.DropDownListFor(x => x.IntendedUseCode, Model.IntendedUseCodes, "Any", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group form-horizontal">
                                    </div>
                                </div>
                            </div>
                            <div class="box-footer">
                                <input id="btnReset" type="button" class="btn btn-danger" value="Clear" />
                                <input id="btnSearch" type="button" class="btn btn-default" value="Search" />
                            </div>
                        }
                    </div>
                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane" id="tab_2">

                </div>
            </div>
            <!-- /.tab-content -->
        </div>
        <!-- nav-tabs-custom -->
    </div>
</div>

<!-- ============================================================================================== -->
<!-- SEARCH RESULTS -->
<!-- ============================================================================================== -->
<div class="box box-default" style="padding:10px;">
    <div class="box-header with-border">
        <h3 class="box-title">Search Results</h3>
        <div class="box-tools pull-right">
            <div class="has-feedback">
            </div>
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body no-padding">
        <div id="section-search-results">

        </div>
    </div>
    <div class="overlay">
        <i class="fa fa-refresh fa-spin"></i>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        Init();
    });

    function Init() {
        $(".overlay").hide();
    }

    $(document).on({
        ajaxStart: function () {
            $(".overlay").show();
        },
        ajaxStop: function () {
            $(".overlay").hide();
        }
    });

    $(function () {
        $("#btnSearch").click(function () {
            var link = '@Url.Action("Search", "WebOrder")';
            var formData = new FormData();

            formData.append("RequestorEmailAddress", $("#RequestorEmailAddress").val());
            formData.append("RequestorFirstName", $("#RequestorFirstName").val());
            formData.append("RequestorLastName", $("#RequestorLastName").val());
            formData.append("RequestorOrganization", $("#RequestorOrganization").val());
            formData.append("IntendedUseCode", $("#IntendedUseCode").val());

            $.ajax({
                url: link,
                type: 'POST',
                cache: false,
                contentType: false,
                processData: false,
                data: formData,
                success: function (response) {
                    $("#section-search-results").html(response);
                }
            });
        });

        $("#btnReset").click(function () {
            $(this).closest('form').find("input[type=text], textarea").val("");
            $("#section-search-criteria select").val("");
            $('#section-search-results').html("");
        });
    });
</script>
