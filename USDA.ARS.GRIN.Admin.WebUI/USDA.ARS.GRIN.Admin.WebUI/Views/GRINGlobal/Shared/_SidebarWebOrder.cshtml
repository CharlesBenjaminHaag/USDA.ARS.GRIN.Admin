@using WebHelpers.Mvc5
<aside class="main-sidebar">
    <section class="sidebar">
        @* BEGIN Search *@
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        @* END Search *@
        @* BEGIN Menu *@
    <ul class="sidebar-menu tree" data-widget="tree">
        <li class="header">MAIN NAVIGATION</li>
        <li class="@Url.IsLinkActive("Index", "Home")">
            <a href="@Url.Action("Index","Home")">
                <i class="fa fa-home"></i>
                <span>GGTools Home</span>
            </a>
        </li>
        <li class="header">Order Manager</li>
        <li class="@Url.IsLinkActive("Index", "WebOrder")">
            <a href="@Url.Action("Index","WebOrder")">
                <i class="fa fa-home"></i>
                <span>Home</span>
            </a>
        </li>
        <li class="@Url.IsLinkActive("Search", "WebOrder")">
            <a href="@Url.Action("Search","WebOrder")">
                <i class="fa fa-search"></i>
                <span>Search</span>
            </a>
        </li>
        <li class="@Url.IsLinkActive("EmailTemplateEdit","WebOrder" )">
            <a href="@Url.Action("EmailTemplateHome","WebOrder")">
                <i class="fa fa-wrench"></i>
                <span>Email Templates</span>
            </a>
        </li>
    </ul>
    </section>
</aside>

