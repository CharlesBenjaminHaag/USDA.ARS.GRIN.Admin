@using WebHelpers.Mvc5
<aside class="main-sidebar">
    <section class="sidebar">
        @* BEGIN Search *@
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        @* END Search *@
        @* BEGIN Menu *@
        <ul class="sidebar-menu tree" data-widget="tree">
            <li class="header">MAIN NAVIGATION</li>
            <li class="@Url.IsLinkActive("Index", "Home")">
                <a href="@Url.Action("Index","Home")">
                    <img src="https://npgsweb.ars-grin.gov/gringlobal/images/admin/icon-home.png" style="padding-right:3px; width:16px; height:16px;" />
                    <span>GGTools Home</span>
                </a>
            </li>
            <li class="@Url.IsLinkActive("Index", "WebOrder")">
                <a href="@Url.Action("Index","WebOrder")">
                    <img src="https://npgsweb.ars-grin.gov/gringlobal/images/admin/fa-wrench.png" style="padding-right:3px; width:16px; height:16px; margin-right:2px;" />
                    <span>NRR-B-Gone Home</span>
                </a>
            </li>
            <li class="header">ADMIN</li>
            <li class="@Url.IsLinkActive("EmailTemplateEdit","WebOrder")">
                <a href="@Url.Action("EmailTemplateEdit","WebOrder")">
                    <img src="https://npgsweb.ars-grin.gov/gringlobal/images/admin/icon-home.png" style="padding-right:3px; width:16px; height:16px;" />
                    <span>Email Templates</span>
                </a>
            </li>
        </ul>
        @* END Menu *@
    </section>
</aside>

