@model USDA.ARS.GRIN.Admin.WebUI.ViewModels.Taxonomy.RegulationListViewModel
    <div style="margin-top:15px;">
        <div class="mailbox-controls">
            <button type="button" class="btn btn-success btn-sm check-all-search-results">
                <img src="~/Content/img/fa-check.png" style="width:18px; height:18px;" />
            </button>
            <button type="button" class="btn btn-danger btn-sm uncheck-all-search-results">
                <img src="~/Content/img/fa-check.png" style="width:18px; height:18px;" />
            </button>
            @*<button type="button" id="btnAddSearchResultsToFolder" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modal-add-search-results-to-folder">
                <img src="~/Content/img/folder-open.png" style="width:18px; height:18px;" />
            </button>*@
            <button type="button" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("RegulationEdit", "Taxonomy")'">
                <img src="~/Content/img/fa-plus.png" style="width:18px; height:18px;" />
            </button>
            <div class="pull-right">
                <button type="button" disabled class="btn btn-default btn-sm">
                    Export
                </button>
            </div>
        </div>
        <div class="table-responsive mailbox-messages">
            <table id="data-list-crops" class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th width="5%"></th>
                        <th>ID</th>
                        <th>Type</th>
                        <th>Level</th>
                        <th>Geography</th>
                        <th>Last Modified</th>
                        <th>By</th>
                        <th style="text-align:center;">Related Maps</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Regulations != null)
                    {
                        foreach (var regulation in Model.Regulations)
                        { 
                            <tr>
                                <td>
                                    <input type="checkbox" class="form-check-input" style="position: absolute; opacity:1;" id="@regulation.ID">
                                </td>
                                <td>
                                    <span class="label label-default">@regulation.ID</span>
                                </td>
                                <td>@regulation.RegulationTypeCode</td>
                                <td>@regulation.RegulationLevelCode</td>
                                <td>@regulation.GeographyID</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>
                                    <a href="#" id="@regulation.ID" class="btn btn-danger btn-sm pull-right row-edit" style="margin-left:5px;">
                                        <img src="~/Content/img/fa-trash.png" style="width:18px; height:18px;" />
                                    </a>
                                    <a href="@Url.Action("RegulationEdit", "Taxonomy", new { id = regulation.ID })" class="btn btn-primary btn-sm pull-right row-edit">
                                        <img src="~/Content/img/fa-edit.png" style="width:18px; height:18px;" />
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
