                <div class="col-md-5" style="        border-left: 1px solid #b5bbc8;">
                    <h4>Species</h4>
                    <div class="input-group input-group-sm" style="margin-bottom:1rem;">
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-primary btn-flat">Search</button>
                        </span>
                    </div>

                    @foreach (var species in Model.Species)
                    {
                        <div class="small-box bg-gray-active">
                            <div class="inner">
                                <h3>@species.SpeciesName</h3>
                                <div class="double">
                                    <input type="checkbox" />
                                </div>
                                <br />
                            </div>
                            <div class="icon">
                                <i class="fa fa-leaf"></i>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-4" style="        border-left: 1px solid #b5bbc8;">
                    <h4>Traits</h4>
                    <div class="input-group input-group-sm" style="margin-bottom:1rem;">
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-primary btn-flat">Search</button>
                        </span>
                    </div>
                    @foreach (var cwrTrait in Model.CWRTraits)
