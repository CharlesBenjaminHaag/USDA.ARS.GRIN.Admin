                <i class="fa fa-chain"></i>Generate Relationships
            </a>
            </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-3">
                    <h4>Crops For CWR</h4>
                    <div class="input-group input-group-sm" style="margin-bottom:1rem;">
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-primary btn-flat">Search</button>
                        </span>
                    </div>
        
                    @foreach (var cropForCwr in Model.CropsForCWR)
                    {
                    <div class="small-box bg-gray-active">
                        <div class="inner">
                            <h3>@cropForCwr.CropName</h3>
                            <div class="double">
                                <input type="checkbox" />
                            </div>
                            <br />
                        </div>
                        <div class="icon">
                            <i class="fa fa-leaf"></i>
                        </div>
                        @*<a href="#" class="small-box-footer">
