@model USDA.ARS.GRIN.Admin.WebUI.ViewModels.Taxonomy.CWRMapViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="section-data-list">

    @if (Model.ID > 0)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="callout callout-info" style="vertical-align:middle;">
                    @*<img src="~/Content/img/info.png" style="margin:0px;" />*@
                    @Html.Raw(Model.RevisionHistoryText)
                </div>
            </div>
        </div>
    }
    @using (Html.BeginForm("CWRMapEdit", "Taxonomy", FormMethod.Post, new { id = "frmEdit" }))
    {
        @Html.HiddenFor(x => x.ID, new { id = "hfCropMapID", name = "ID" })
        @Html.HiddenFor(x => x.SpeciesID, new { id = "hfSpeciesID" })
        @Html.ValidationSummary()

        <div class="box box-default">
            <div class="box-header">
                <h3 class="box-title">Detail</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <input type="submit" id="btnSaveChanges" class="btn btn-success pull-right" style="margin-left:5px;" value="Save" />
                        <a href="@Url.Action("CropForCWREdit", "Taxonomy", new { id = Model.CropID })" class="btn btn-default pull-right">Go to Crop</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-horizontal">
                            <div class="box-body">
                                @if (Model.ID > 0)
                                {
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">ID</label>
                                        <div class="col-sm-1">
                                            <input type = "text" id="txtSpeciesID" disabled="" value="@Model.ID" class="form-control" />   
                                        </div>
                                    </div>
                                }
                                <div id="section-common-name" class="form-group" style="display:none;">
                                    <label for="txtName" class="col-sm-2 control-label">Common Name</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(x => x.CommonName, new { @id = "txtCommonName", @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.CommonName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="txtSpeciesName" class="col-sm-2 control-label">Species Name</label>
                                    <div class="col-sm-10">
                                        <div class="input-group">
                                            @*<input type="text" id="txtSpeciesName" value="@Model.SpeciesName" class="form-control" />*@
                                            @Html.TextBoxFor(x => x.SpeciesName, new { @id = "SpeciesName", @class = "form-control" })
                                            @Html.HiddenFor(x => x.SpeciesID, new { id = "hfSpeciesID" })
                                            <span class="input-group-btn">
                                                <button type="button" class="btn btn-primary btn-flat" data-toggle="modal" data-target="#modal-species-search">...</button>
                                            </span>
                                        </div>
                                        @Html.ValidationMessageFor(x => x.SpeciesID, "", new { @class = "text-danger" })
                                        @Html.ValidationMessageFor(x => x.SpeciesName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="txtName" class="col-sm-2 control-label">Crop</label>
                                    <div class="col-sm-10">
                                        @Html.DropDownListFor(x => x.CropID, Model.Crops, "Select a crop", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="txtName" class="col-sm-2 control-label">Genepool Code</label>
                                    <div class="col-sm-10">
                                        @Html.DropDownListFor(x => x.GenepoolCode, Model.GenepoolCodes, "Select a genepool code", new { @id = "ddlGenepoolCode", @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="txtDisplayName" class="col-sm-2 control-label"> </label>
                                    <div class="col-sm-10">
                                        @Html.CheckBoxFor(x => x.IsCrop, new { id = "cbxIsCrop" })<label style="margin-left:10px;">Is Crop</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="txtDisplayName" class="col-sm-2 control-label"> </label>
                                    <div class="col-sm-10">
                                        @Html.CheckBoxFor(x => x.IsGraftStock, new { id = "cbxIsGraftStock" })<label style="margin-left:10px;">Is Graftstock</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="txtDisplayName" class="col-sm-2 control-label"> </label>
                                    <div class="col-sm-10">
                                        @Html.CheckBoxFor(x => x.IsPotential, new { id = "cbxIsPotential" })<label style="margin-left:10px;">Is Potential</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="txtSpeciesName" class="col-sm-2 control-label">Note</label>
                                    <div class="col-sm-10">
                                        @Html.TextAreaFor(x => x.Note, new { @id = "txtNote", @class = "form-control" })
                                        <button type="button" class="btn btn-default btn-flat pull-right" style="margin-top:10px;" data-toggle="modal" data-target="#modal-note-search">Search Notes...</button>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="txtCitation" class="col-sm-2 control-label">Citation</label>
                                    <div class="col-sm-10">
                                        @if (Model.ID > 0)
                                        {
                                            @Html.DropDownListFor(x => x.CitationID, Model.Citations, htmlAttributes: new { @class = "form-control", id = "ddlCitations" })
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.ID > 0)
    {
        <div class="box box-default">
            <div class="box-header">
                <h3 class="box-title">Related Traits</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div id="section-crop-trait-list" class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div>
                            <div class="mailbox-controls">
                                <button type="button" class="btn btn-success btn-sm check-all-search-results">
                                    <i class="fa fa-check"></i>
                                </button>
                                <button type="button" class="btn btn-danger btn-sm uncheck-all-search-results">
                                    <i class="fa fa-check-square"></i>
                                </button>
                                <button type="button" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("CropTraitEdit", "Taxonomy", new { speciesId = Model.SpeciesID, cropId = Model.CropID, cropTraitid = 0 })'">
                                    <i class="fa fa-plus"></i>
                                </button>
                                <button type="button" id="btnDeleteMultiple" class="btn btn-danger btn-sm">
                                    <i class="fa fa-trash"></i>
                                </button>
                                <div class="pull-right">
                                    <button type="button" disabled class="btn btn-default btn-sm">
                                        Export
                                    </button>
                                </div>
                            </div>

                            <div class="table-responsive mailbox-messages">
                                <table id="data-list" class="table table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Trait Class</th>
                                            <th>Breeding Type</th>
                                            <th>Potential?</th>
                                            <th>Breeding Usage</th>
                                            <th>Created</th>
                                            <th>By</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.CWRTraits.Count > 0)
                                            {
                                                foreach (var trait in Model.CWRTraits)
                                                {
                                                    <tr>
                                                        <td>
                                                            <input type="checkbox" class="form-check-input" style="position: absolute; opacity:1;" id="@trait.ID">
                                                        </td>
                                                        <td>
                                                            <span class="label label-default">@trait.ID</span>
                                                        </td>
                                                        <td>
                                                            @trait.TraitClassTitle
                                                        </td>
                                                        <td>
                                                            @trait.BreedingTypeTitle
                                                        </td>
                                                        <td>
                                                            @Html.Raw(DisplayHelper.GetBooleanDisplayString(trait.IsPotential))
                                                        </td>
                                                        <td>
                                                            @trait.BreedingUsageNote
                                                        </td>
                                                        <td>
                                                            @trait.CreatedDate.ToShortDateString()
                                                        </td>
                                                        <td>
                                                            @trait.CreatedByCooperatorName
                                                        </td>
                                                        <td>
                                                            <a href="@Url.Action("CropTraitDelete", "Taxonomy", new { cropId = Model.CropID, cropMapId = Model.ID, cropTraitId = trait.ID })" class="btn btn-danger btn-sm pull-right row-edit" style="margin-left:5px;">
                                                                <img class="img-action-button" src="~/Content/img/fa-trash.png" style="width:18px; height:18px;" />
                                                            </a>
                                                            <a href="@Url.Action("CropTraitEdit", "Taxonomy", new { speciesId = Model.SpeciesID, cropId = Model.CropID, cropMapId = Model.ID, cropTraitid = trait.ID })" class="btn btn-primary btn-sm pull-right row-edit">
                                                                <img class="img-action-button" src="~/Content/img/fa-edit.png" style="width:18px; height:18px;" />
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="8">
                                                        <div class="callout callout-info" style="vertical-align:middle; margin-top:20px;">
                                                            @*<img src="~/Content/img/info.png" style="margin:0px;" />*@
                                                            There are no traits associated with this map.
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


<!--
