@model USDA.ARS.GRIN.Admin.WebUI.ViewModels.Taxonomy.SpeciesListViewModel

@if ((Model.Action != "Parent") && (Model.Action != "Folder"))
{
    <div class="mailbox-controls">
        <button type="button" id="btnSelectAll" class="btn btn-default btn-sm">
            <i class="fa fa-check"></i>
        </button>
        <button type="button" id="btnDeSelectAll" class="btn btn-default btn-sm">
            <i class="fa fa-check-circle-o"></i>
        </button>
        <button type="button" id="btnAddFolder" class="btn btn-primary btn-sm">
            <i class="fa fa-folder"></i>
        </button>
        <button type="button" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("SpeciesEdit", "Taxonomy")'">
            <i class="fa fa-plus"></i>
        </button>
        <div class="pull-right">
            <button type="button" disabled class="btn btn-default btn-sm">
                Export
            </button>
        </div>
    </div>
}
<table id="data-table-species" class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Accepted?</th>
            <th>Protologue</th>
            <th>Verified Date</th>
            <th>Last Modified</th>
            <th>By</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var species in Model.SpeciesList)
        {
        <tr>
            <td><span class="badge">@species.ID</span></td>
            <td>@Html.Raw(species.FullName)</td>
            <td>@Html.Raw(DisplayHelper.GetBooleanDisplayString(species.IsAcceptedName))</td>
            <td>@Html.Raw(species.Protologue)</td>
            <td>@species.NameVerifiedDate</td>
            <td>
                @if (species.ModifiedDate != DateTime.MinValue)
                {
                    @species.ModifiedDate.ToShortDateString()
                }
            </td>
            <td>
                @species.ModifiedByCooperatorName
            </td>
            <td>
                <a href="@Url.Action("SpeciesEdit", "Taxonomy", new { id = species.ID })" class="btn btn-primary btn-sm pull-right row-edit">
                    <i class="fa fa-edit"></i>
                </a>
                @if (Model.Action == "Folder")
                {
                    <button id="btnDeleteFolderItem_@species.ReferenceID" class="btn btn-danger btn-sm pull-right row-edit margin-r-5">
                        <i class="fa fa-trash"></i> Remove From Folder
                    </button>
                }

            </td>
        </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    $('#data-table-species').DataTable(
        {
            responsive: true,
            select: true,
            buttons: [
                {
                    text: 'Select all',
                    action: function () {
                        table.rows().select();
                    }
                },
                {
                    text: 'Select none',
                    action: function () {
                        table.rows().deselect();
                    }
                }
            ]
        }
    );
</script>