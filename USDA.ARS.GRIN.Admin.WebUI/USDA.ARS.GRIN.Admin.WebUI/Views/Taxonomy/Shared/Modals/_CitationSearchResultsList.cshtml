@model List<USDA.ARS.GRIN.Admin.Models.Taxonomy.Citation>
<br />
<h4>@Model.Count() results found</h4>
<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Note</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var citation in Model)
            {
                <tr>
                    <td><span class="badge">@citation.ID</span></td>
                    <td>
                        @Html.Raw(citation.CitationText)
                    </td>
                    <td>
                        <button id="btnCitation1" value="@citation.ID" class="btn btn-primary btn-small proto pull-right" onclick="SelectCitation(this.value);return false;">Select</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">
                    <div class="callout callout-info" style="vertical-align:middle; margin-top:5px;">
                        Your search returned no matches.
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
