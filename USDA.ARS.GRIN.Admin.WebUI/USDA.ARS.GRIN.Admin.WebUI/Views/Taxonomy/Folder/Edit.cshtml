<div class="modal fade" id="modal-add-to-folder">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Add to Folder</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#tab_new_folder" data-toggle="tab" aria-expanded="true">New Folder</a></li>
                                <li class=""><a href="#tab_select_folder" data-toggle="tab" aria-expanded="false">Saved Folders</a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab_new_folder">
                                    <div class="col-md-12">
                                        <div class="input-group">
                                            <input type="text" id="txtFolderTitle" class="form-control">
                                            <span class="input-group-btn">
                                                <button type="button" id="btnCreateFolder" class="btn btn-info btn-flat">Create</button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="tab_select_folder">
                                    <div class="alert alert-warning">
                                        <h4><i class="icon fa fa-warning"></i>Please Note</h4>
                                        This functionality will be available in the next release.
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                @*<button type="button" class="btn btn-success pull-right" data-dismiss="modal">OK</button>
                    <button type="button" class="btn btn-danger pull-right" data-dismiss="modal">Close</button>*@
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<script type="text/javascript">

    $(document).ready(function () {
        Init();
    });

    function Init() {
        try {
            GetItems();
        }
        catch (ex) {
            console.log(ex);
        }
    }

    $(document).on("click", "[id*='btnDelete']", function () {

        var btnId = $(this).attr('id');
        var folderItemId = btnId.split("_")[1];

        alert("DEBUG DELETE " + folderItemId);

        $.ajax({
            url: '@Url.Action("FolderItemDelete", "Taxonomy")',
            type: "GET",
            data: { id: folderItemId },
            cache: false,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result) {
                GetItems();
            },
            error: function () {
            }
        });
    });

    function GetItems() {
        var folderId = $("#ID").val();
        var dataSourceName = $("#DataSourceName").val(); 
        var link = '@Url.Action("FolderItemList", "Taxonomy")';
        var formData = new FormData();

        try {
            formData.append("FolderID", folderId);
            formData.append("DataSourceName", dataSourceName);
            $.ajax({
                url: link,
                type: 'POST',
                cache: false,
                contentType: false,
                processData: false,
                data: formData,
                success: function (response) {
                    $("#section-folder-items").html(response);
                }
            });
        }
        catch (ex) {
            console.log(ex);
        }
    }

