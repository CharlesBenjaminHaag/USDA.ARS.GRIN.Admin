@model List<USDA.ARS.GRIN.Admin.Models.Taxonomy.Folder>


    <div class="box box-solid">
        <div class="box-header with-border">
            <h3 class="box-title">My Folders</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="box-group" id="accordion">
                @if (Model.Count() == 0)
                { 
                <div class="callout callout-info" style="vertical-align:middle; margin-top:20px;">
                    @*<img src="~/Content/img/info.png" style="margin:0px;" />*@
                    You currently have no folders.
                </div>
                }
                else
                {

                    foreach (var folder in Model)
                    {
                        string sectionId = "section" + folder.ID.ToString();
                        string sectionFolderContainerControlId = "section-folder-item-container-" + folder.ID.ToString();
                        string sectionHref = "#" + sectionId;

                    <div class="panel box box-default" style="border:none; margin-bottom:10px;">
                        <div class="box-header with-border" style="background-color:#ebebeb;">
                            <h4 class="box-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="@sectionHref" aria-expanded="false" class="collapsed">
                                    @folder.Title
                                </a>
                                <a href="@Url.Action("FolderEdit", "Taxonomy", new { id = folder.ID })" class="btn btn-primary btn-xs row-edit" style="margin-left:5px;">
                                    <img class="img-action-button" src="~/Content/img/fa-edit.png" style="width:12px; height:12px;" />
                                </a>
                                <a href="@Url.Action("FolderDelete", "Taxonomy", new { id = folder.ID })" class="btn btn-danger btn-xs pull-right row-edit" style="margin-left:5px;">
                                    <img class="img-action-button" src="~/Content/img/fa-trash.png" style="width:12px; height:12px;" />
                                </a>
                            </h4>
                            <br />
                        </div>
                        <div id="@sectionId" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                            <div class="box-body" id="@sectionFolderContainerControlId" style="background-color:#ebebeb;">
                                @*@{ Html.RenderAction("FolderItemList", "Taxonomy", new { targetFolderId = folder.ID });}*@


                                <div class="panel box box-default" style="border:none; margin-bottom:10px;">
                                    <div class="box-header" style="background-color:#dfdfdf;">
                                        <h4 class="box-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="222" aria-expanded="false" class="collapsed">
                                                TEST
                                            </a>
                                        </h4>
                                        <br />
                                    </div>
                                    <div id="222" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                                        <div class="box-body" id="111">
                                            TEST
                                        </div>
                                    </div>
                                </div>

                                <div class="panel box box-default" style="border:none; margin-bottom:10px;">
                                    <div class="box-header" style="background-color:#dfdfdf;">
                                        <h4 class="box-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="222" aria-expanded="false" class="collapsed">
                                                TEST
                                            </a>
                                        </h4>
                                        <br />
                                    </div>
                                    <div id="222" class="panel-collapse collapse" aria-expanded="false" style="height: 0px;">
                                        <div class="box-body" id="111">
                                            TEST
                                        </div>
                                    </div>
                                </div>









                            </div>
                        </div>
                    </div>
                                        }
                                    }
            </div>
        </div>
        <!-- /.box-body -->
    </div>
