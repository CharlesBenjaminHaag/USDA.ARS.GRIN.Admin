@model List<USDA.ARS.GRIN.Admin.Models.Taxonomy.Folder>

@if (Model.Count() == 0)
{
    <div class="callout callout-info" style="vertical-align:middle; margin-top:20px;">
        @*<img src="~/Content/img/info.png" style="margin:0px;" />*@
        You currently have no folders.
    </div>
}
else
{
<div class="row">
    @foreach (var folder in Model)
    {
        <div class="col-md-4">
            <div class="info-box">
                <span class="info-box-icon bg-gray"><i class="fa fa-folder-open"></i></span>
                <div class="info-box-content" style="padding-bottom:1px;">
                    <span class="info-box-text" style="font-weight:bold;">
                        @if (folder.IsFavorite)
                        {
                            <i class="fa text-yellow fa-star"></i>
                        }
                        <a href="@Url.Action("FolderEdit","Taxonomy", new { id = folder.ID })">@folder.Title (Created @folder.CreatedDate.ToShortDateString())</a>
                    </span>
                    @if (!String.IsNullOrEmpty(folder.Description))
                    {
                        <span class="info-box-text" style="font-style:italic; font-size:.98em;">@folder.Description</span>
                    }
                <div style="margin-top: .5em;">
                    <span class="badge bg-black-active" style="margin-left: 2px;">@folder.Category</span>
                    <span class="badge bg-gray-active" style="margin-left:2px;">@folder.DataSourceTitle</span>
                    @*@if (folder.IsShared)
        {
            <span class="badge bg-yellow-active" style="margin-left:2px;">SHARED</span>
        }*@
                </div>
                </div>
                <!-- /.info-box-content -->
            </div>
        </div>
    }
</div>
}





