@model List<USDA.ARS.GRIN.Admin.Models.Taxonomy.Literature>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Reference Title</th>
                <th>Abreviation</th>
                <th>Author</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var literature in Model)
                {
                    <tr>
                        <td><span class="label label-default">@literature.ID</span></td>
                        <td>@literature.ReferenceTitle</td>
                        <td>@literature.Abbreviation</td>
                        <td>@literature.EditorAuthorName</td>
                        <td><button id="btnAuthor1" value="@literature.ID" class="btn btn-primary btn-small proto" onclick="SelectLiterature(@literature.ID);return false;">Select</button></td>
                    </tr>
                }
            }
            else
            {
                <div class="callout callout-info" style="vertical-align:middle; margin-top:5px;">
                    @*<img src="~/Content/img/info.png" style="margin:0px;" />*@
                    Your search returned no matches.
                </div>
            }
        </tbody>
    </table>
