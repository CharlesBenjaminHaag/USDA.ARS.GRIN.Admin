@model USDA.ARS.GRIN.Admin.WebUI.ViewModels.Taxonomy.LiteratureListViewModel
<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.LiteratureList.Count() > 0)
        {

            foreach (var literature in Model.LiteratureList)
            {
            <tr>
                <td>
                    <div style="word-wrap:break-word; padding:.4em;">
                      @Html.Raw(literature.ReferenceTitle)
                    </div>
                </td>
                <td>
                    <button id="btnSelectLiterature" value="@literature.ReferenceTitle" class="btn btn-primary btn-small proto" onclick="SelectLiterature(@literature.ID, this.value);return false;">Select</button>
                </td>
            </tr>
            }
        }
        else 
        { 
            <tr>
                <td colspan="2">
                    <div class="callout callout-info" style="vertical-align:middle; margin-top:20px;">
                        No records matched your search criteria.
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
