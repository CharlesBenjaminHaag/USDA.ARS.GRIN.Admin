@model USDA.ARS.GRIN.Admin.WebUI.ViewModels.Taxonomy.CitationHomeViewModel
@{
    ViewBag.Title = "Taxonomy: Citations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ============================================================================================== -->
<!-- TABBED VIEW -->
<!-- ============================================================================================== -->
<div class="box box-primary" style="padding:10px;">
    
    <div class="box-header with-border">
        <h3 class="box-title">Citation</h3>

        <div class="box-tools pull-right">
            <div class="has-feedback">
            </div>
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
        <!-- /.box-tools -->
    </div>
    <!-- /.box-header -->
    <div class="box-body no-padding">
        <div class="overlay">
            <i class="fa fa-refresh fa-spin"></i>
        </div>
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active" style="background-color:#ebebeb;">
                    <a href="#tab_1" id="tab-my-records" title="CitationListByUser" class="selector-tab" data-toggle="tab" aria-expanded="true">By User</a>
                </li>
                <li class="" style="background-color:#ebebeb;">
                    <a href="#tab_2" id="tab-recently-added" title="CitationListRecent" class="selector-tab" data-toggle="tab" aria-expanded="false">Recently Modified</a>
                </li>
                <li class="" style="background-color:#ebebeb;">
                    <a href="#tab_3" id="tab-search" title="" class="selector-tab" data-toggle="tab" aria-expanded="false">
                        <i class="fa fa-search"></i>
                    </a>
                </li>
            </ul>
            <div class="tab-content">

                <!-- ============================================================================================== -->
                <!-- MY-RECORDS TAB -->
                <!-- ============================================================================================== -->
                <div class="tab-pane active" id="tab_1">
                    <div class="xbox-body">

                        <div id="section-by-user">
                        </div>
                    </div>
                </div>

                <!-- ============================================================================================== -->
                <!-- RECENTLY-ADDED TAB -->
                <!-- ============================================================================================== -->
                <div class="tab-pane" id="tab_2">
                    <div class="xbox-body">
                        <div id="section-recently-added">
                        </div>
                    </div>
                </div>

                <!-- ============================================================================================== -->
                <!-- SEARCH TAB -->
                <!-- ============================================================================================== -->
                <div class="tab-pane" id="tab_3">
                    <div class="xbox-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-7" style="padding-left:0px;">
                                        <div class="input-group" style="margin-left:0px;">
                                            <input type="text" id="txtSearchText" name="SearchText" placeholder="Type name ..." class="form-control">
                                            <span class="input-group-btn">
                                                <button type="button" id="btnSearch" class="btn btn-primary btn-flat">Search</button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div id="section-search-results" class="crop-search-results">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    $(document).on({
        ajaxStart: function () {
            $("body").addClass("loading");
        },
        ajaxStop: function () {
            alert("DEBUG AJAX STOP");
            $(".overlay").hide();
        }
    });


    $(document).ready(function () {
        var link = '@Url.Action("CitationListByUser", "Taxonomy")';
        $.ajax(
            {
                type: 'POST',
                url: link,
                success:
                    function (response) {
                        $("#section-by-user").html(response);
                    },
                error:
                    function (response) {
                        console.log(response);
                    }
            });
    });

    $(".selector-tab").click(function () {
        var id = $(this).attr('id');
        var action = $(this).attr('title');
        var link = '@Url.Action("Action", "Taxonomy")';
        var displaySection = '';

        $('.mailbox-messages input:checkbox').prop('checked', false);

        if (action != '') {
            displaySection = "#" + id.replace("tab", "section");
            link = link.replace("Action", action);

            //DEBUG
            console.log(link);


            $(displaySection).load(link);
        }
    });

    $(document).on("click", "[id*='btnSearch']", function () {
        var value = $("#txtSearchText").val();
        var url = '@Url.Action("CitationSearch", "Taxonomy")';

        $.get(url, { searchText: value })
        .done(function (response) {
            $("#section-search-results").html(response);
        });
    });
</script>