@model List<USDA.ARS.GRIN.Admin.Models.Taxonomy.Citation>

<div>
    <div class="mailbox-controls">
        @*<button type="button" class="btn btn-success btn-sm check-all-search-results">
            <i class="fa fa-check"></i>
        </button>
        <button type="button" class="btn btn-danger btn-sm uncheck-all-search-results">
            <i class="fa fa-check-square"></i>
        </button>
        <button type="button" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("CropTraitEdit", "Taxonomy", new { speciesId = Model.SpeciesID, cropId = Model.CropId, cropMapId = Model.CropMapID, cropTraitid = 0 })'">
            <i class="fa fa-plus"></i>
        </button>
        <button type="button" id="btnDeleteMultiple" class="btn btn-danger btn-sm">
            <i class="fa fa-trash"></i>
        </button>*@
        <div class="pull-right">
            <button type="button" disabled class="btn btn-default btn-sm">
                Export
            </button>
        </div>
    </div>

    <div class="table-responsive mailbox-messages">
        <table id="data-list" class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Literature</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    if (Model.Count > 0)
                    {
                        foreach (var citation in Model)
                        {
                            <tr>
                                <td>
                                    <span class="label label-default">@citation.ID</span>
                                </td>
                                <td>
                                    @Html.Raw(citation.Title)
                                </td>
                                <td>
                                    @citation.Literature.ReferenceTitle
                                </td>
                                <td>
                                    @*<a href="@Url.Action("SpeciesCitationDelete", "Taxonomy", new { cropId = Model.CropId, cropMapId = Model.CropMapID, cropTraitId = trait.ID })" class="btn btn-danger btn-sm pull-right row-edit" style="margin-left:5px;">
                                        <img class="img-action-button" src="~/Content/img/fa-trash.png" style="width:18px; height:18px;" />
                                    </a>
                                    <a href="@Url.Action("CropTraitEdit", "Taxonomy", new { speciesId = Model.SpeciesID, cropId = Model.CropId, cropMapId = Model.CropMapID, cropTraitid = trait.ID })" class="btn btn-primary btn-sm pull-right row-edit">
                                        <img class="img-action-button" src="~/Content/img/fa-edit.png" style="width:18px; height:18px;" />
                                    </a>*@
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">
                                <div class="callout callout-info" style="vertical-align:middle; margin-top:20px;">
                                    There are no citations associated with this species.
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $('.check-all-search-results').on('click', function () {
            $('.mailbox-messages input:checkbox').prop('checked', true);
        });
        $('.uncheck-all-search-results').on('click', function () {
            $('.mailbox-messages input:checkbox').prop('checked', false);
        });
    });
</script>

