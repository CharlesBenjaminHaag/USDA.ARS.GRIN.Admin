@model USDA.ARS.GRIN.Admin.Models.Taxonomy.Literature

<div class="box box-widget widget-user-2">
    <div class="widget-user-header bg-blue-active">
        <h3 class="widget-user-username">@Html.Raw(Model.ReferenceTitle)</h3>
        <h5 class="widget-user-desc"><strong>Literature</strong></h5>
    </div>
    <div class="box-footer">
        <div class="row">
            <div class="col-md-6">
                <dl>
                    <dt>Literature Title</dt>
                    <dd>@Model.ReferenceTitle</dd>
                    <dt>Abbreviation</dt>
                    <dd>@Model.Abbreviation</dd>
                    <dt>Standard Abbreviation</dt>
                    <dd>@Model.StandardAbbreviation</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl>
                    <dd></dd>
                    <dt>Publication Year</dt>
                    <dd>@Model.PublicationYear</dd>
                    <dt>Publisher Name</dt>
                    <dd>@Model.PublisherName</dd>
                    <dt>Note</dt>
                    <dd>@Model.Note</dd>
                </dl>
            </div>
        </div>
        <button type="button" class="btn btn-default pull-right" data-toggle="modal" data-target="#modal-literature-search">Search Literature...</button>

    </div>
</div>

