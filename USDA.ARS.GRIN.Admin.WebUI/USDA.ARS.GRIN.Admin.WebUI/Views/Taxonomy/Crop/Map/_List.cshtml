@model USDA.ARS.GRIN.Admin.WebUI.ViewModels.Taxonomy.CWRMapSearchViewModel

<div style="margin-top:15px;">
    <div class="mailbox-controls">

        <button type="button" class="btn btn-default btn-sm"></button>


        <button type="button" class="btn btn-success btn-sm check-all-search-results">
            <img src="~/Content/img/fa-check.png" style="width:18px; height:18px;" />
        </button>
        <button type="button" class="btn btn-danger btn-sm uncheck-all-search-results">
            <img src="~/Content/img/fa-check.png" style="width:18px; height:18px;" />
        </button>
        <button type="button" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("CWRMapEdit", "Taxonomy", new { cropId = Model.CropID })'">
            <img src="~/Content/img/fa-plus.png" style="width:18px; height:18px;" />
        </button>
        <button type="button" id="btnDeleteMultiple" class="btn btn-danger btn-sm">
            <i class="fa fa-trash-o"></i>
        </button>
        <div class="pull-right">
            <button type="button" disabled class="btn btn-default btn-sm">
                Export
            </button>
        </div>
    </div>
    <div class="table-responsive mailbox-messages">
        <table id="data-list-crops" class="table table-hover table-striped">
            <thead>
                <tr>
                    <th width="5%"></th>
                    <th>ID</th>
                    <th>Common Name</th>
                    <th>Crop?</th>
                    <th>Graftstock?</th>
                    <th>Potential?</th>
                    <th>Genepool</th>
                    <th>Created</th>
                    <th>By</th>
                    <th>Last Modified</th>
                    <th>By</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.SearchResults != null)
                {
                    if (Model.SearchResults.Rows.Count > 0)
                    {
                        foreach (System.Data.DataRow row in Model.SearchResults.Rows)
                        {
                            DateTime dtCreatedDate = DateTime.Parse(row["created_date"].ToString());
                            DateTime dtModifiedDate = DateTime.MinValue;

                            if (row["modified_date"] != DBNull.Value)
                            {
                                dtModifiedDate = DateTime.Parse(row["modified_date"].ToString());
                            }
                        <tr>
                    <td>
                        <input type="checkbox" class="form-check-input" style="position: absolute; opacity:1;" id="@row["taxonomy_cwr_map_id"]">
                    </td>
                    <td>
                        <span class="label label-default">@row["taxonomy_cwr_map_id"]</span>
                    </td>
                    <td>
                        @row["crop_common_name"]
                    </td>
                    <td>
                        @Html.Raw(DisplayManager.GetDisplayString(@row["is_crop"].ToString()))
                    </td>
                    <td>
                        @Html.Raw(DisplayManager.GetDisplayString(@row["is_graftstock"].ToString()))
                    </td>
                    <td>
                        @Html.Raw(DisplayManager.GetDisplayString(@row["is_potential"].ToString()))
                    </td>
                    <td>
                        @row["genepool_code"]
                    </td>
                    <td>
                        @dtCreatedDate.ToShortDateString()
                    </td>
                    <td>
                        @row["created_by_name"]
                    </td>
                    <td>
                        @if (dtModifiedDate != DateTime.MinValue)
                        {
                            @dtModifiedDate.ToShortDateString()
                        }
                    </td>
                    <td>
                        @row["modified_by_name"]
                    </td>
                    <td>
                        <a href="@Url.Action("CwrMapDelete", "Taxonomy", new { cropId = Model.CropID, cropMapid = row["taxonomy_cwr_map_id"] })" class="btn btn-danger btn-sm pull-right row-edit" style="margin-left:5px;">
                            <img class="img-action-button" src="~/Content/img/fa-trash.png" style="width:18px; height:18px;" />
                        </a>
                        <a href="@Url.Action("CwrMapEdit", "Taxonomy", new {cropId = Model.CropID, cwrMapId = row["taxonomy_cwr_map_id"] })" class="btn btn-primary btn-sm pull-right row-edit">
                            <img class="img-action-button" src="~/Content/img/fa-edit.png" style="width:18px; height:18px;" />
                        </a>
                    </td>
                    <td>
                        
                    </td>
                </tr>
                        }
                    }
                    else
                    { 
                        <tr>
                            <td colspan="12">
                                No records found.
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


<script type="text/javascript">
    $(function () {
        $('.check-all-search-results').on('click', function () {
            $('.mailbox-messages input:checkbox').prop('checked', true);
        });
        $('.uncheck-all-search-results').on('click', function () {
            $('.mailbox-messages input:checkbox').prop('checked', false);
        });
    });
</script>

