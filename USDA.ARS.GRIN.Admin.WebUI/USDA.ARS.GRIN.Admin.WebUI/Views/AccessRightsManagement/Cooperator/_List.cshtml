<table id="data-table" class="table table-striped" style=" width:100%;">
    <thead>
        <tr>
            <th>ID</th>
            <th>User Name</th>
            <th>Email Address</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Organization</th>
            <th>Site</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cooperator in Model.Cooperators)
        {
            <tr>
                <td>
                    <span class="badge">cooperator.ID</span>
                </td>
                <td>
                    
                </td>
                <td>
                    @cooperator.FirstName
                </td>
                <td>
                    @cooperator.LastName
                </td>
                <td>
                    @cooperator.Organization
                </td>
                <td>
                    @cooperator.Site.LongName
                </td>
                <td>
                    
                </td>
                <td>
                    <a href="@Url.Action("CooperatorEdit", "AccessRightsManagement", new { id = cooperator.ID })" class="btn btn-primary btn-sm pull-right row-edit">
                        <i class="fa fa-edit"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    $('#data-table').DataTable(
        {
            responsive: true,
            select: true
        }
    );
</script>
