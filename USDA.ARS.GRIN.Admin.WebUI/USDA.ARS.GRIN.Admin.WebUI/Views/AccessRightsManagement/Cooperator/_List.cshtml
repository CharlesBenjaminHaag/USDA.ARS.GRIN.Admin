    <button type="button" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("CooperatorEdit", "AccessRightsManagement", new { id = 0 })'">
        <i class="fa fa-plus"></i>
    </button>
    <div class="pull-right">
        <button type="button" disabled class="btn btn-default btn-sm">
            Export
        </button>
