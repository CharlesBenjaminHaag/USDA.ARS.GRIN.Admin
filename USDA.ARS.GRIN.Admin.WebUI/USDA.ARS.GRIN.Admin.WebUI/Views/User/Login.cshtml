@model USDA.ARS.GRIN.Admin.WebUI.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>GGTools | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="../../bower_components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/css/AdminLTE.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="../../plugins/iCheck/square/blue.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>GGTools</b>@DisplayHelper.GetVersion() Login</a>
        </div>
        <!-- /.login-logo -->

        @{
            string loginTabCSSClass = String.Empty;
            string loginNavCSSClass = String.Empty;
            string passwordResetTabCSSClass = String.Empty;
            string passwordResetNavCSSClass = String.Empty;

            if (Model.Action == "PasswordReset")
            {
                loginTabCSSClass = "tab-pane";
                passwordResetNavCSSClass = "active";
                passwordResetTabCSSClass = "tab-pane active";
            }
            else
            {
                loginTabCSSClass = "tab-pane active";
                loginNavCSSClass = "active";
                passwordResetTabCSSClass = "tab-pane";
            }
        }

        <div class="login-box-body">
            <div id="btn-container" style="margin-bottom:20px;">
                <button class="btn btn-default btn-block btn-sm btn-flat" data-toggle="modal" data-target="#modal-release-notes">
                    Release @DisplayHelper.GetVersion() Notes
                </button>
            </div>

            @*<p class="login-box-msg">Log in using your <strong>GRIN-Global Admin</strong> user name and password.</p>*@
            @if (!String.IsNullOrEmpty(Model.Status) && Model.Status != USDA.ARS.GRIN.Admin.Service.LoginResult.SUCCESS.ToString())
            {
                <div class="alert alert-danger">
                    <h4 style="margin-bottom:0px; margin-top:0px; padding-bottom:0px; padding-top:0px;">Login Error</h4>
                    @Model.ErrorMessage
                </div>
            }
            <form action="@Url.Action("Login","User")" method="post">
                <label>Select Server</label>
                <div class="form-group has-feedback">
                    <select name="environment" class="form-control">
                        <option value="LOCAL">Local</option>
                        @*<option value="PRODCOPY">Prod-Copy</option>*@
                        <option value="DEVELOPMENT">Development</option>
                        @*<option value="TEST">Test</option>*@
                        @*<option value="TRAINING">Training</option>
                            <option value="PRODUCTION">Production</option>*@
                    </select>
                </div>
                <div class="form-group has-feedback">
                    <input type="text" name="userName" class="form-control" placeholder="User name">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" name="password" class="form-control" placeholder="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        <button type="button" class="btn btn-primary btn-block btn-flat">
                            Reset Password
                        </button>
                    </div>
                    <div class="col-xs-6">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-xs-12" style="margin-top:20px;">
                    <a href="@Url.Action("AccountRequest")" class="btn btn-success btn-block">I would like to request a new Curator account.</a>
                    @*<button disabled="" class="btn btn-primary btn-block btn-flat pull-right">Request New Account</button>*@
                </div>
            </div>
        </div>
        <!-- /.login-box-body -->
    </div>


    <div class="modal fade" id="modal-release-notes">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Release Notes</h4>
                </div>
                <div class="modal-body">


                    Release notes - NGRL DBMU Initiatives - Version GGTools 1.1.1

                    <h2>
                        Task
                    </h2>
                    <ul>
                        <li>
                            [<a href='https://ngrl-dbmu.atlassian.net/browse/NDI-171'>NDI-171</a>] -         Configure &quot;Enter&quot; Key To Save Changes in All Edit Pages
                        </li>
                        <li>
                            [<a href='https://ngrl-dbmu.atlassian.net/browse/NDI-172'>NDI-172</a>] -         Display Full Species Name in CWR Map Edit Page
                        </li>
                        <li>
                            [<a href='https://ngrl-dbmu.atlassian.net/browse/NDI-173'>NDI-173</a>] -         Display Internal Record ID on All Edit Pages
                        </li>
                        <li>
                            [<a href='https://ngrl-dbmu.atlassian.net/browse/NDI-176'>NDI-176</a>] -         Add  &quot;Save Changes?&quot; Prompt to All Edit Pages
                        </li>
                        <li>
                            [<a href='https://ngrl-dbmu.atlassian.net/browse/NDI-181'>NDI-181</a>] -         On All Edit Pages, &quot;Note&quot; Fields Must be Multi-Line
                        </li>
                        <li>
                            [<a href='https://ngrl-dbmu.atlassian.net/browse/NDI-184'>NDI-184</a>] -         On Species Edit Page, Change &quot;Authority&quot; to &quot;Name Authority&quot; and Move Field Under &quot;Name&quot; Field
                        </li>
                        <li>
                            [<a href='https://ngrl-dbmu.atlassian.net/browse/NDI-187'>NDI-187</a>] -         Species Edit Page: Change &quot;Add Variety&quot; to &quot;Add SubTaxa&quot;
                        </li>
                    </ul>

                    <h2>
                        Bug
                    </h2>
                    <ul>
                        <li>
                            [<a href='https://ngrl-dbmu.atlassian.net/browse/NDI-168'>NDI-168</a>] -         Change &quot;Genii&quot; to &quot;Genera&quot;
                        </li>
                        <li>
                            [<a href='https://ngrl-dbmu.atlassian.net/browse/NDI-170'>NDI-170</a>] -         &quot;Last Modified&quot; Appearing in Lists as &quot;1/1/0001&quot; When No Date Exists
                        </li>
                        <li>
                            [<a href='https://ngrl-dbmu.atlassian.net/browse/NDI-177'>NDI-177</a>] -         On CWR Map Home Page, All Records Show &quot;Is Crop&quot; as &quot;Yes&quot;
                        </li>
                        <li>
                            [<a href='https://ngrl-dbmu.atlassian.net/browse/NDI-183'>NDI-183</a>] -         On Species Home Page, All Records Appear With  &quot;Accepted&quot; = &quot;No&quot;
                        </li>
                    </ul>



                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger pull-right" data-dismiss="modal">Close</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>


    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Content/js/plugins/jquery/jquery-3.3.1.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Content/js/plugins/bootstrap/bootstrap.js"></script>
