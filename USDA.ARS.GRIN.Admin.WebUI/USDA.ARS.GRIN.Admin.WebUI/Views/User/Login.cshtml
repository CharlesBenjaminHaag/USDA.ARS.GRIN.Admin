    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>GGTools</b>@DisplayManager.GetVersion()</a>
        </div>

        @*@if (Model.Status == LoginStatusEnum.ERROR)
            {
                @Html.Partial("~/Views/User/_LoginError.cshtml")
            }*@
        <!-- /.login-logo -->
    <div class="login-box-body">
        @*<p class="login-box-msg">Log in using your <strong>GRIN-Global Admin</strong> user name and password.</p>*@

        <form action="@Url.Action("Login","User")" method="post">
            @if (!String.IsNullOrEmpty(Model.Status) && Model.Status != USDA.ARS.GRIN.Admin.Service.LoginResult.SUCCESS.ToString())
            { 
            <div class="alert alert-danger">
                <h4 style="margin-bottom:0px; margin-top:0px; padding-bottom:0px; padding-top:0px;">Login Error</h4>
                @Model.ErrorMessage
            </div>
            }
            <label>Log in using your GRIN-Global Curator Tool user name and password.</label>
            <div class="form-group has-feedback">
                <input type="text" name="userName" class="form-control" placeholder="User name">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" name="password" class="form-control" placeholder="Password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <select name="environment" class="form-control">
                    @*<option value="LOCAL">Local</option>*@
                    @*<option value="PRODCOPY">Prod-Copy</option>*@
                    <option value="DEVELOPMENT">Development</option>
                    @*<option value="TEST">Test</option>*@
                    @*<option value="TRAINING">Training</option>
                    <option value="PRODUCTION">Production</option>*@
                </select>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <button disabled="" class="btn btn-success btn-block btn-flat">Request New Account</button>
                </div>

                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div>

            </div>
    </form>
        @*<div class="social-auth-links text-center">
            <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                <i class="fa fa-facebook"></i> Sign in using
                Facebook
            </a>
            <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                <i class="fa fa-google-plus"></i> Sign in using
                Google+
            </a>
        </div>*@

        <!-- TODO: INCLUDE BY VERSION 1.0.5 -->
        @*<a href="#">I forgot my password</a><br>
        <a href="register.html" class="text-center">Request access</a>*@

    </div>
        <!-- /.login-box-body -->
    </div>


    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Content/js/plugins/jquery/jquery-3.3.1.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Content/js/plugins/bootstrap/bootstrap.js"></script>
